@using ToDoList.Models
@using ToDoList.ViewModels
@model ToDoList.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<form class="form-login" role="form" ng-controller="loginController">
    <h2 class="form-login-heading">Login</h2>
    <input type="text" class="form-control" placeholder="Username" data-ng-model="loginData.userName" required autofocus>
    <input type="password" class="form-control" placeholder="Password" data-ng-model="loginData.password" required>
    <button class="btn btn-lg btn-info" type="submit" data-ng-click="login()">Login</button>
    <div data-ng-hide="message == ''" class="alert alert-danger">
        {{message}}
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}